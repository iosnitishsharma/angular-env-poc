    "production": {
      "public": "dist/angular-environment-app",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
      "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    },
    "qa": {
      "public": "dist/angular-environment-app",
